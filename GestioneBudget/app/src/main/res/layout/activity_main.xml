<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="33dp"
        android:text="Budget:"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/budgetEditTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:inputType="text"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/budgetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/budgetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="538dp"
        android:text="SetBudget"
        android:onClick="ClickBudget"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/foodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="28dp"
        android:text="Food"
        android:backgroundTint="@color/red"
        android:onClick="ClickType"
        app:layout_constraintBottom_toTopOf="@+id/descriptionEditTextText"
        app:layout_constraintEnd_toStartOf="@+id/trasportButton" />

    <Button
        android:id="@+id/trasportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="28dp"
        android:text="Transport"
        android:backgroundTint="@color/blue"
        android:onClick="ClickType"
        app:layout_constraintBottom_toTopOf="@+id/descriptionEditTextText"
        app:layout_constraintEnd_toStartOf="@+id/otherButton" />

    <Button
        android:id="@+id/otherButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="460dp"
        android:text="Other"
        android:backgroundTint="@color/green"
        android:onClick="ClickType"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/ricaviButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="460dp"
        android:text="Ricavi"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:onClick="ClickType"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="352dp"
        android:text="Submit"
        android:onClick="ClickSubmit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/descriptionEditTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:inputType="text"
        android:text="Descrizione"
        app:layout_constraintBottom_toTopOf="@+id/outEditTextText"
        app:layout_constraintEnd_toStartOf="@+id/submitButton" />

    <EditText
        android:id="@+id/outEditTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:inputType="text"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/submitButton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="14dp"
        android:text="Budget Iniziale:"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/budgetStatTextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="14dp"
        android:text="Cibo:"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/foodStatTextView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="17dp"
        android:text="Trasporti:"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/transportStatTextView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="15dp"
        android:text="Altro:"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/otherStatTextView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="16dp"
        android:text="Ricavi:"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/ricaviStatTextView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="97dp"
        android:text="Restanti:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/moneyLeftStatTextView" />

    <TextView
        android:id="@+id/budgetStatTextView"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="14dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/foodStatTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/foodStatTextView"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="14dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/transportStatTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/transportStatTextView"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="17dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/otherStatTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/otherStatTextView"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="15dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/ricaviStatTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ricaviStatTextView"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/moneyLeftStatTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/moneyLeftStatTextView"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="97dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>